
	<!-- Render the edit form  -->
	<form class="form-horizontal" action=<%="/todo/" + todo.id + "?_method=PATCH"%> method="post">
		<div class="form-group">
			<label class="col-sm-2 control-label">Task:</label>
			<div class="col-sm-10">
				<input type="text" name="task" value="<%=todo.task%>" class="form-control" />
			</div>
		</div>


		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
		  	<label class="radio-inline"><input type="radio" name="completed" value=true
					<% if (todo.completed ) { %> checked <% } %> >Task Completed</label>

				<label class="radio-inline"><input type="radio" name="completed" value=false
					<% if (!todo.completed ) { %> checked <% } %> >Task Not completed</label>

			</div>
		</div>


    <div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<input type="submit" class="btn btn-success" value="I am done with editing" />
			</div>
		</div>
	</form>

