  	<!-- Display flash messages  -->
	<% for(var i in messages) { %>
	   <div class="flash"><%= messages[i] %></div>
	<% } %>

	<!-- Render the signin form  -->
	<form action="/signin" method="post">
		<div>
			<label>Username:</label>
			<input type="text" name="username" />
		</div>
		<div>
			<label>Password	:</label>
			<input type="password" name="password" />
		</div>
		<div>
			<input type="submit" value="Sign In" />
		</div>
	</form>

<ul>
	<!-- Render the OAuth authentication links  -->
	<li><a href="/oauth/facebook">Sign in with Facebook</a></li>
	<li><a href="/oauth/twitter">Sign in with Twitter</a></li>
	<li><a href="/oauth/google">Sign in with Google</a></li>
</ul>
